@* Define Model *@
@model IEnumerable<Actor>

@* Define ViewData *@
@{
    ViewData["Title"] = "List Of Actors";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row my-5">
    <div class="col-md-10 offset-md-1">
        <div class="card bg-dark text-white shadow-lg rounded-4">
            <div class="card-header text-center border-bottom border-secondary">
                <h2 class="mb-0 text-uppercase" style="letter-spacing: 2px; font-weight: 700; color: #f4b400;">
                    List of Actors
                </h2>
            </div>
            <div class="card-body">
                <table class="table table-dark table-hover align-middle rounded-3 overflow-hidden">
                    <thead>
                        <tr class="text-uppercase text-secondary">
                            <th>@Html.DisplayNameFor(model => model.ProfilePictureUrl)</th>
                            <th>@Html.DisplayNameFor(model => model.FullName)</th>
                            <th>@Html.DisplayNameFor(model => model.Bio)</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img class="rounded-circle border border-secondary shadow-sm"
                                         src="@item.ProfilePictureUrl"
                                         alt="@item.FullName" style="max-width:120px; height:120px; object-fit:cover;">
                                </td>
                                <td class="fw-semibold text-light">
                                    @item.FullName
                                </td>
                                <td style="max-width:300px;" class="text-muted">
                                    @item.Bio
                                </td>
                                <td class="text-center">
                                    <a class="btn btn-sm btn-outline-warning me-1 shadow-sm hover-glow" asp-route-id="@item.Id" asp-action="Edit">
                                        <i class="bi bi-pencil-square me-1"></i>Edit
                                    </a>
                                    <a class="btn btn-sm btn-outline-info me-1 text-white shadow-sm hover-glow" asp-route-id="@item.Id" asp-action="Details">
                                        <i class="bi bi-eye me-1"></i>Details
                                    </a>
                                    <a class="btn btn-sm btn-outline-danger text-white shadow-sm hover-glow" asp-route-id="@item.Id" asp-action="Delete">
                                        <i class="bi bi-trash me-1"></i>Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                    @await Html.PartialAsync("PartialViews/_CreateNavigation", "Actor")
                </table>

            </div>
        </div>
    </div>
</div>