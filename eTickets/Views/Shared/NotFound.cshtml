@{
    ViewData["Title"] = "Page Not Found";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container d-flex flex-column justify-content-center align-items-center vh-100">
    <div class="text-center">
        <h1 class="flicker-text">404</h1>
        <p class="fs-3 text-secondary">
            <span class="text-warning">Oops!</span> The page you're looking for doesn't exist.
        </p>
        <p class="lead text-muted">
            It seems you've hit a dead end. Let’s get you back on track.
        </p>
        <a asp-controller="Movie" asp-action="Index" class="btn btn-lg btn-outline-primary mt-3 shadow-sm">
            <i class="bi bi-house-door-fill me-2"></i> Go to Homepage
        </a>
    </div>
</div>
