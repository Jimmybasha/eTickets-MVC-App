@model Producer

@{
    ViewData["Title"] = "Create A new Producer";
}



<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded-4">
        <h2 class="mb-4 text-center">Add A New Producer</h2>

        @*this will handle the Create post request*@

        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!-- Picture Preview -->
            <div class="text-center mb-4">
                <img id="picturePreview" src="https://via.placeholder.com/200"
                     alt="Producer Profile Pic" class="img-thumbnail rounded-circle"
                     style="width: 300px; height: 300px; object-fit:cover;">
            </div>
            <!-- Picture URL -->
            <div class="mb-4">
                <label asp-for="ProfilePictureUrl" class="form-label">Picture URL</label>
                <input asp-for="ProfilePictureUrl" type="url" class="form-control" id="pictureUrl" placeholder="Enter picture URL">
                <span asp-validation-for="ProfilePictureUrl" class="text-danger"></span>
            </div>



            <!-- Name -->
            <div class="form-floating mb-4">
                <input asp-for="FullName" type="text" class="form-control" id="name" placeholder="Name">
                <label asp-for="FullName">Full Name</label>
                <span asp-validation-for="FullName" class="text-danger"></span>

            </div>

            <!-- Biography -->
            <div class="form-floating mb-4">
                <textarea asp-for="Bio" class="form-control" placeholder="Biography" id="biography" style="height: 150px"></textarea>
                <label asp-for="Bio">Biography</label>
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-end">
                <a class="btn  btn-secondary me-2" asp-action="Index">Show All</a>
                <input value="Create" type="submit" class="btn btn-success " />
            </div>
        </form>
    </div>
</div>

<script>
    // Run after the page is fully loaded
    document.addEventListener('DOMContentLoaded', function () {
        const input = document.getElementById('pictureUrl');
        const img = document.getElementById('picturePreview');
        const url = input.value;

        // If the input has a value (after form error), set the preview to that value
        img.src = url || 'https://via.placeholder.com/200';
    });

    // Live preview as the user types
    document.getElementById('pictureUrl').addEventListener('input', (event) => {
        const url = event.target.value;
        const img = document.getElementById('picturePreview');
        img.src = url || 'https://via.placeholder.com/200';
    });
</script>