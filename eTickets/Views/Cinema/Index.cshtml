@model IEnumerable<Cinema>




@*Define ViewData*@
@{
    ViewData["Title"] = "List Of Cinemas";
}
@*Write Code*@
<div class="row my-5">
    <div class="col-md-10 offset-md-1">
        <div class="card bg-dark text-white shadow-lg rounded-4">
            <div class="card-header text-center border-bottom border-secondary">
                <h2 class="mb-0 text-uppercase" style="letter-spacing: 2px; font-weight: 700; color: #f4b400;">
                    List of Cinemas
                </h2>
            </div>
            <div class="card-body">
                <table class="table table-dark table-hover align-middle rounded-3 overflow-hidden">
                    <thead>
                        <tr class="text-uppercase text-secondary">
                            <th>@Html.DisplayNameFor(model => model.Logo)</th>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Description)</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img class="rounded-circle border border-secondary shadow-sm"
                                         src="@item.Logo"
                                         alt="@item.Name" style="max-width:120px; height:120px; object-fit:cover;">
                                </td>
                                <td class="fw-semibold text-light">
                                    @item.Name
                                </td>
                                <td style="max-width:300px;" class="text-muted">
                                    @item.Description
                                </td>
                                <td class="text-center">
                                    <a class="btn btn-sm btn-outline-warning me-1 shadow-sm hover-glow">
                                        <i class="bi bi-pencil-square me-1"></i>Edit
                                    </a>
                                    <a class="btn btn-sm btn-outline-info me-1 text-white shadow-sm hover-glow">
                                        <i class="bi bi-eye me-1"></i>Details
                                    </a>
                                    <a class="btn btn-sm btn-outline-danger text-white shadow-sm hover-glow">
                                        <i class="bi bi-trash me-1"></i>Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>