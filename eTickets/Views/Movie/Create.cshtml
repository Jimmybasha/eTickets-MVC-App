@using eTickets.Data;
@using eTickets.Data.Enum
@using eTickets.Data.ViewModels;
@model NewMovieViewModel

@{
    ViewData["Title"] = "Create a new movie";
}
<style>
    footer {
        display: none;
        position: fixed;
        bottom: 0;
        width: 100%;
        z-index: 100;
        background-color: #f8f9fa;
    }
</style>
<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded-4">
        <h2 class="mb-4 text-center">Create A New Movie</h2>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Image Preview -->
            <div class="text-center mb-4">
                <img id="ImageUrlPreview" src="https://via.placeholder.com/200" alt="Movie Poster"
                     class="img-thumbnail rounded" style="width: 300px; height: 300px; object-fit: cover;">
            </div>

            <!-- LHS + RHS Fields in two columns -->
            <div class="row">
                <!-- LHS -->
                <div class="col-md-6">
                    <div class="mb-4">
                        <label asp-for="Name" class="form-label">Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Movie name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="StartDate" class="form-label">Start Date</label>
                        <input asp-for="StartDate" type="date" class="form-control">
                        <span class="text-danger" asp-validation-for="StartDate"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="EndDate" class="form-label">End Date</label>
                        <input asp-for="EndDate" type="date" class="form-control">
                        <span class="text-danger" asp-validation-for="EndDate"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Price" class="form-label">Price</label>
                        <input asp-for="Price" type="number" step="0.5" class="form-control" placeholder="Price">
                        <span class="text-danger" asp-validation-for="Price"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="ImageURL" class="form-label">Image URL</label>
                        <input asp-for="ImageURL" class="form-control" id="ImageUrlInput" placeholder="Enter image URL">
                        <span class="text-danger" asp-validation-for="ImageURL"></span>
                    </div>
                </div>

                <!-- RHS -->
                <div class="col-md-6">
                    <div class="mb-4">
                        <label asp-for="CinemaId" class="form-label">Cinema</label>
                        <select asp-for="CinemaId" class="form-select" asp-items="@ViewBag.Cinemas" > </select>
                        <span class="text-danger" asp-validation-for="CinemaId"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="MovieCategory" class="form-label">Category</label>
                        <select asp-for="MovieCategory" class="form-select" asp-items="Html.GetEnumSelectList<MovieCategory>()"  ></select>
                        <span class="text-danger" asp-validation-for="MovieCategory"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="ProducerId" class="form-label">Producer</label>
                        <select asp-for="ProducerId" class="form-select" asp-items="@ViewBag.Producers"></select>
                        <span class="text-danger" asp-validation-for="ProducerId"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="ActorIds" class="form-label">Actors</label>
                        <select asp-for="ActorIds" class="form-select" asp-items="@ViewBag.Actors" multiple></select>
                        <span class="text-danger" asp-validation-for="ActorIds"></span>
                    </div>
                </div>
            </div>

            <!-- Description -->
            <div class="form-floating mb-4">
                <textarea asp-for="Description" class="form-control" placeholder="Description" style="height: 150px"></textarea>
                <label asp-for="Description">Description</label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-end">
                <a class="btn btn-secondary me-2 hover-glow" asp-action="Index">Show All</a>
                @await Html.PartialAsync("PartialViews/_Create&ShowAllItem", "Movie")
            </div>
        </form>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const input = document.getElementById('ImageUrlInput');
        const img = document.getElementById('ImageUrlPreview');
        const placeholder = 'https://via.placeholder.com/200';
        let timeout;

        function updateImage(url) {
            if (url && (url.startsWith('http://') || url.startsWith('https://'))) {
                img.src = url;
            } else {
                img.src = placeholder;
            }
        }

        // Initial preview
        updateImage(input.value);

        input.addEventListener('input', (event) => {
            clearTimeout(timeout);
            timeout = setTimeout(() => {
                updateImage(event.target.value.trim());
            }, 300); // wait 300ms after typing stops
        });
    });

</script>